modules = ["nodejs-20"]
[agent]
expertMode = true
run = "pnpm run dev"
entrypoint = "client/pages/index.html"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "pnpm run build && pnpm run preview"]
deploymentTarget = "static"
ignorePorts = false

# Custom compression control (example - agar manually control karna ho)
[[deployment.responseHeaders]]
path = "/*"
name = "Vary"
value = "Accept-Encoding"

[workflows]
